# Questpoint Cafe - Environment Variables Template
# Copy this file to .env.local and fill in the values

# =============================================================================
# REQUIRED: Site Configuration
# =============================================================================
NEXT_PUBLIC_SITE_URL=https://questpointcafe.com

# =============================================================================
# REQUIRED: Supabase Configuration
# Section 9.1 - Technical Constraints (Free tier: 500MB DB, 2GB/day bandwidth)
# =============================================================================
NEXT_PUBLIC_SUPABASE_URL=https://your-project.supabase.co
NEXT_PUBLIC_SUPABASE_ANON_KEY=your-anon-key-here
SUPABASE_SERVICE_ROLE_KEY=your-service-role-key-here

# =============================================================================
# REQUIRED: Square Payment Configuration
# Section 9.1 - Technical Constraints (Rate limit: 10 req/sec)
# =============================================================================
NEXT_PUBLIC_SQUARE_APPLICATION_ID=sandbox-app-id-here
NEXT_PUBLIC_SQUARE_LOCATION_ID=sandbox-location-id-here
SQUARE_ACCESS_TOKEN=sandbox-access-token-here
SQUARE_WEBHOOK_SIGNATURE_KEY=your-webhook-signature-key-here

# Square Environment (sandbox | production)
NEXT_PUBLIC_SQUARE_ENVIRONMENT=sandbox

# =============================================================================
# OPTIONAL: Analytics & Monitoring
# Section 8 - Analytics & Monitoring
# =============================================================================

# Vercel Analytics (automatically enabled in Vercel deployments)
# No configuration needed

# Sentry Error Tracking
NEXT_PUBLIC_SENTRY_DSN=https://your-sentry-dsn@sentry.io/project-id
SENTRY_ORG=your-sentry-org
SENTRY_PROJECT=questpoint-cafe
SENTRY_AUTH_TOKEN=your-sentry-auth-token

# =============================================================================
# OPTIONAL: Feature Flags
# Section 9 - Constraints & Assumptions
# =============================================================================

# Enable/disable Supabase integration (set to 'false' for stub mode)
NEXT_PUBLIC_SUPABASE_ENABLED=false

# Enable/disable Square integration (set to 'false' for stub mode)
NEXT_PUBLIC_SQUARE_ENABLED=false

# =============================================================================
